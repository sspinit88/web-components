@import "vars.styl"

.aside
  position: fixed
  top: 0
  left: -100%
  width: 30rem
  max-width: 80%
  height: 100vh
  background-color: $grey
  box-shadow: 0 2px 8px rgba($black, 0.26)
  transition: left .3s ease-out

:host([open]) .aside
  left: 0

.header
  padding: .5rem
  background-color $black

  &__title
    color: $white
    font-size 1.5rem

.header button {
  position: absolute;
  top: 0;
  right: 0;
  padding: 1rem;
  color: white;
  background: transparent;
  font-size: 1.5rem;
  border: none;
}

.header button:focus {
  outline: none;
}
