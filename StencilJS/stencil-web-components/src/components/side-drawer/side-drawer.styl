@import "vars.styl"

.aside
  position: fixed
  top: 0
  left: -100%
  z-index: 1000
  width: 30rem
  max-width: 80%
  height: 100vh
  background-color: $grey
  box-shadow: 0 2px 8px rgba($black, 0.26)
  transition: left .3s ease-out

:host([open]) .aside
  left: 0

.header
  padding: .5rem
  background-color $black

  &__title
    color: $white
    font-size 1.5rem

.header button
  position: absolute
  top: 0
  right: 0
  padding: 1rem
  color: white
  background: transparent
  font-size: 1.5rem
  border: none
  outline: none
  cursor: pointer

.tabs
  display: flex
  width: 100%

  button
    width: 100%
    background: transparent
    border: none
    outline: none
    padding: .7rem 0
    cursor: pointer
    transition: all .3s ease-in

    &:hover,
    &.active
      color: $white
      background-color: rgba($black, .7)

.content-information
  padding: 0 1rem

.overlay
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba($black, .5)
  transition: all .3s ease-out

