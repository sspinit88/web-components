$primary = #ff6cfe
$black = #000000
$white = #ffffff
$disabled = #ccc
$warn = #ff5353
$grey = #ccc

:host
  display: block
  max-width: 100%
  font-family: sans-serif
  margin: 2rem
  padding: 1rem
  border: 2px solid $primary
  border-radius: 5px
  box-sizing: border-box
  max-width: 100%
  width: 20rem

  .form
    box-sizing: border-box
    margin-bottom: 16px

    input
      font: inherit
      height: 30px
      color: $primary
      padding: 0.1rem 0.25rem
      outline: none
      margin-right: 4px
      border: 1px solid $black
      border-radius: 5px

    button
      font: inherit
      height: 100%
      padding: 0.5rem
      color: $white
      background-color: $primary
      border: 1px solid $primary
      cursor: pointer
      border-radius: 5px
      outline: none

      &:hover,
      &:active
        background-color: rgba($primary, .7)
        border-color: rgba($primary, .7)

      &:disabled
        background-color: $disabled
        border-color: $disabled
        color: $white
        cursor: not-allowed

  .error
    color: $warn

  .search-result
    margin: 0
    list-style: none
    padding-inline-start: 0

    &__list
      display: block
      margin: 0.25rem 0
      padding: 0.5rem
      border: 1px solid $grey

      &:hover,
      &:active
        cursor: pointer
        background-color: $primary
        color: $white

    &__strong
      margin-right: 5px

